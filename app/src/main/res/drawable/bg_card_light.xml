<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo suave -->
    <solid android:color="@color/white_96" />

    <!-- Bordas arredondadas -->
    <corners android:radius="20dp" />

    <!-- Sombra/borda leve -->
    <stroke
        android:width="1dp"
        android:color="@color/white_20" />

    <!-- Pequena margem de sombra (opcional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
