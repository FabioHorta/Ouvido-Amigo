<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/white_96"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvExercicioTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Físico"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/oa_text"/>

        <TextView
            android:id="@+id/tvExercicioInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvExercicioTitulo"
            android:text="5–10 min"
            android:textColor="@color/oa_text"
            android:alpha="0.7"/>

        <CheckBox
            android:id="@+id/cbConcluido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
