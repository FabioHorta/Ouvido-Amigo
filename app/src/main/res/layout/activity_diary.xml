<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_teal_gradient">

    <!-- SCROLL CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollDiary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diário"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Regista o teu dia, revê entradas e exporta em PDF"
                    android:textColor="@color/white"
                    android:alpha="0.85"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Card: ações rápidas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white_96"
                app:strokeColor="@color/white_20"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ações rápidas"
                        android:textStyle="bold"
                        android:textColor="@color/oa_text"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Acede às reflexões ou exporta o teu diário."
                        android:textColor="@color/oa_text"
                        android:alpha="0.8"
                        android:textSize="13sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCalendarReflections"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ver reflexões"
                            app:icon="@drawable/ic_calendar_24"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnExportPdf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Exportar diário PDF"
                            app:backgroundTint="@color/oa_teal"
                            android:textColor="@android:color/white"
                            app:cornerRadius="20dp"
                            app:icon="@drawable/ic_file_pdf_24"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: escrever -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white_96"
                app:strokeColor="@color/white_20"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Escrever no diário"
                        android:textStyle="bold"
                        android:textColor="@color/oa_text"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Regista pensamentos, momentos ou gratidões."
                        android:textColor="@color/oa_text"
                        android:alpha="0.8"
                        android:textSize="13sp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnWrite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Escrever diário"
                        app:backgroundTint="@color/oa_teal"
                        android:textColor="@android:color/white"
                        app:cornerRadius="20dp"
                        app:icon="@drawable/ic_edit_24"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: ver calendário do diário -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white_96"
                app:strokeColor="@color/white_20"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calendário do diário"
                        android:textStyle="bold"
                        android:textColor="@color/oa_text"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Escolhe uma data para ver o que escreveste."
                        android:textColor="@color/oa_text"
                        android:alpha="0.8"
                        android:textSize="13sp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCalendarDiary"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Ver calendário (diário)"
                        app:icon="@drawable/ic_calendar_24"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="28dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BOTTOM NAV FIXA -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/oa_bottom_nav_bg"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
